<div id="new_league">
  <center>
    <h2>Add League</h2>
    <div id="league_name_alert" class="alert alert-danger" role="alert"> 
      The league must have a name. 
    </div>
    <div class="form_group">
      <label for="league_name">Name</label>
      <input type="text" id="league_name" name="league_name" class="form-control">
    </div>
    <h3>
      <span id="create_league_button" class="label label-default">Create</span>
    </h3>
  </center>
  <script> 
    $('#league_name_alert').hide();
    $('#create_league_button').click(function () { 
      if($('#league_name').val() === "") {
        $('#league_name_alert').show();
      } else {
        var data = { 'league':
          { 'name': $('#league_name').val(),
            'user_id': <%= current_user.id %>
          }
        };
        $.post('<%= leagues_path %>', data, function () { 
          window.location.replace('<%= leagues_path %>'); 
        });  
      }
    }); 
  </script>
</div>
