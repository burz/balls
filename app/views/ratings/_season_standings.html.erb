<div id="season_standings_panel" class="panel panel-default">
  <div class="panel-heading">
    <h3>Season Standings</h3>
  </div>
  <div class="panel-body">
    <% if @seasons.size == 0 and current_user.admin? @league %>
      <%= link_to 'Create A Season', new_league_season_path(@league),
                  class: 'btn btn-success btn-lg' %>
    <% end %>
    <% for season in @seasons %>
      <div class="panel panel-success">
        <div class="panel-heading">
          <%= link_to league_season_path @league, season do %>
            <h2><%= season.name %></h2>
          <% end %>
        </div>
        <div class="panel-body">
          Ends <span class="game_date"><%= season.end_date %></span>
          <br>
          <table class="table table-bordered table-hover">
            <thead>
              <tr>
                <td>#</td>
                <td>Name</td>
                <td>Rating</td>
                <td>Games</td>
                <td>+/-</td>
              </tr>
            </thead>
            <tbody>
              <% i = 1 %>
              <% for rating in season.ratings %>
                <% if rating.games_played > 0 %>
                  <% if current_user.id == rating.user_id %>
                    <tr class="rating_row current_user_row"
                  <% else %>
                    <tr class="rating_row"
                  <% end %>
                        user_path="<%= url_for(user_path rating.user_id) %>">
                    <td><%= i %></td>
                    <td><%= rating.name %></td>
                    <td><%= rating.rating %></td>
                    <td><%= rating.games_played %></td>
                    <td><%= rating.wins %>/<%= rating.losses %></td>
                  </tr>
                  <% i = i + 1 %>
                <% end %>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    <% end %>
  </div>
</div>
