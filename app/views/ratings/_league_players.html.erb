<% if @league_players %>
  <div class="panel panel-default">
    <div class="panel-heading">
      <h3>League Standings</h3>
    </div>
    <div class="panel-body">
      <table class="table table-bordered table-hover">
        <thead>
          <tr>
            <td>#</td>
            <td>Name</td>
            <td>Rating</td>
            <td>Games</td>
            <td>+/-</td>
          </tr>
        </thead>
        <tbody>
          <% i = 1 %>
          <% for rating in @league_players %>
            <% if current_user.id == rating.user_id %>
              <tr class="rating_row current_user_row"
            <% else %>
              <tr class="rating_row"
            <% end %>
                  user_path="<%= url_for(user_path rating.user_id) %>">
              <td><%= i %></td>
              <td><%= rating.name %></td>
              <td><%= rating.rating %></td>
              <td><%= rating.games_played %></td>
              <td><%= rating.wins %>/<%= rating.losses %></td>
            </tr>
            <% i = i + 1 %>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
<% end %>
