<div id="season_info">
  <center>
    <div class="well">
      <h1><%= @season.name %></h1>
    </div>
    <div class="panel panel-success">
      <div id="rules_button" class="panel-heading">+ Rules</div>
      <div id="rules_panel" class="panel-body">
        <h3>
          End date: <%= format_date @season.end_date %>
          <br>
          Number of players per team: <%= @season.players_per_team %>
          <br>
          Number of cups per team: <%= @season.cups_per_team %>
          <br>
          Additional rules: <%= @season.additional_rules %>
        </h3>
      </div>
    </div>
    <div class="row">
      <div class="col-md-6">
        <div class="panel panel-default">
          <div class="panel-heading">
            <h3>Standings</h3>
          </div>
          <div class="panel-body">
            <table class="table table-bordered table-hover">
              <thead>
                <tr>
                  <td>#</td>
                  <td>Name</td>
                  <td>Rating</td>
                  <td>Games</td>
                  <td>+/-</td>
<!--                  <td>Ratio</td>-->
                </tr>
              </thead>
              <tbody>
                <% i = 1 %>
                <% for rating in @season.ratings %>
                  <% if rating.games_played > 0 %>
                    <% if current_user.id == rating.user_id %>
                      <tr class="user_row current_user_row"
                          user_path="<%= user_path rating.user_id %>">
                    <% else %>
                      <tr class="user_row" user_path="<%= user_path rating.user_id %>">
                    <% end %>
                      <td><%= i %></td>
                      <% i = i + 1 %>
                      <td><%= rating.name %></td>
                      <td><%= rating.rating %></td>
                      <td><%= rating.games_played %></td>
                      <td><%= rating.wins %>/<%= rating.losses %></td>
<!--                      <td><%= format_ratio(rating.wins - rating.losses) %></td>-->
                    </tr>
                  <% end %>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
      <div class="col-md-6">
        <%= render template: 'games/index', locals: { show_ratings: false } %>
      </div>
    </div>
  </center>
</div>
