<div id="season_info">
  <center>
    <div class="well">
      <h1><%= @season.name %></h1>
    </div>
    <div class="panel panel-warning">
      <div id="rules_button" class="panel-heading">+ Rules</div>
      <div id="rules_panel" class="panel-body">
        <table class="table table-bordered">
          <thead>
            <tr>
              <td>End Date</td>
              <td>Players Per Team</td>
              <td>Cups Per Team</td>
              <td>Number of Balls</td>
            </tr>
          </thead>
          <tbody>
            <tr>
              <td><%= format_date @season.end_date %></td>
              <td><%= @season.players_per_team %></td>
              <td><%= @season.cups_per_team %></td>
              <td><%= @season.number_of_balls %></td>
            </tr>
          </tbody>
        </table>
        <% if @season.additional_rules != '' %>
          <div class="panel panel-default">
            <div class="panel-heading">
              <h3>Additional Rules</h3>
            </div>
            <div class="panel-body">
              <%= @season.additional_rules %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
    <div class="row">
      <div class="col-md-6">
        <div class="panel panel-default">
          <div class="panel-heading">
            <h3>Standings</h3>
          </div>
          <div class="panel-body">
            <table class="table table-bordered table-hover">
              <thead>
                <tr>
                  <td>#</td>
                  <td>Name</td>
                  <td>Rating</td>
                  <td>Games</td>
                  <td>+/-</td>
                </tr>
              </thead>
              <tbody>
                <% i = 1 %>
                <% for rating in @season.ratings %>
                  <% if rating.games_played > 0 %>
                    <% if current_user.id == rating.user_id %>
                      <tr class="rating_row current_user_row"
                    <% else %>
                      <tr class="rating_row"
                    <% end %>
                          user_path="<%= url_for(user_path rating.user_id) %>">
                      <td><%= i %></td>
                      <td><%= rating.name %></td>
                      <td><%= rating.rating %></td>
                      <td><%= rating.games_played %></td>
                      <td><%= rating.wins %>/<%= rating.losses %></td>
                    </tr>
                    <% i = i + 1 %>
                  <% end %>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
      <div class="col-md-6">
        <%= render template: 'games/index', locals: { show_ratings: false } %>
      </div>
    </div>
  </center>
</div>
