<div id="season_edit_page">
  <center>
    <div class="panel panel-default">
      <div class="panel-heading">
        <h1>
          Edit Season
          <%= link_to @season.name, league_season_path(@league, @season) %>'s
          Information
        </h1>
      </div>
      <div class="panel-body">
        <% if @season.games.count == 0 %>
          <%= link_to league_season_path(@league, @season), method: :delete do %>
            <button class="btn btn-lg btn-danger">
              Delete Season
            </button>
            <br>
            <br>
          <% end %>
        <% end %>
        <%= render 'seasons/form' %>
      </div>
    </div>
  </center>
</div>
