<!DOCTYPE html>
<html>
    <head>
        <title>Balls</title>
        <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': true %>
        <%= javascript_include_tag 'application', 'data-turbolinks-track': true %>
        <%= csrf_meta_tags %>
    </head>
    <body>
      <div class="container">
        <%= render template: 'common/site_header' %>
        <br>
        <center>
          <div class="global_alert alert alert-warning"><%= notice %></div>
          <div class="global_alert alert-danger"><%= alert %></div>
        </center>
        <script>
          $(".global_alert").each(function (i, alert_element) {
            if(alert_element.innerText === '') {
              alert_element.hidden = true;
            }
          });
        </script>
        <%= yield %>
      </div>
    </body>
</html>
