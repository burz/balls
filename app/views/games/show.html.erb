<div id="game_show">
  <center>
    <div class="well">
      <h1>Game <%= @game.id %></h1>
      <h3>
        Logged At <span id="played_date" ><%= @game.created_at %></span>
      </h3>
    </div>
    <div class="alert alert-warning" role="alert">
      Cups Left: <%= @game.cup_differential %>
    </div>
    <div class="row">
      <div class="col-md-6">
        <div class="panel panel-success">
          <div class="panel-heading">
            <h3>Winners</h3>
          </div>
          <div class="panel-body">
            <% for winner in @game.winners %>
              <%= render template: 'games/changes', locals: { player: winner } %>
            <% end %>
          </div>
        </div>
      </div>
      <div class="col-md-6">
        <div class="panel panel-danger">
          <div class="panel-heading">
            <h3>Losers</h3>
          </div>
          <div class="panel-body">
            <% for loser in @game.losers %>
              <%= render template: 'games/changes', locals: { player: loser } %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </center>
</div>
