<div id="home_page">
  <% if mobile_device? %>
    <div class="row">
      <%= render template: 'common/user_entrance' %>
    </div>
  <% else %>
        <div class="row">
          <div class="col-md-6">
            <%= render template: 'common/user_entrance' %>
            <br>
            <center>
              <a href="https://play.google.com/store/apps/details?id=com.ballsapp.www.ballsapp">
                <img alt="Android app on Google Play"
                     src="https://developer.android.com/images/brand/en_app_rgb_wo_60.png" />
              </a>
            </center>
          </div>
          <br>
          <div id="info_pane" class="col-md-6">
            <%= render template: 'welcome/intro' %>
          </div>
        </div>
    <div class="row">
      <div class="col-md-12">
        <%= render template: 'welcome/example' %>
      </div>
    </div>
  <% end %>
</div>
